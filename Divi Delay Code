jQuery(document).ready(function ($) {
    var delayTime = 120000; // 2 minutes
    var intervalTime = 30000; // 30 seconds

    function handleSlider() {
        $('.et_pb_slider').each(function () {
            var slider = $(this);

            // Force stop initial autoplay
            slider.attr('data-autoplay', 'false');
            slider.trigger('stop.et_pb_simple_slider');

            setTimeout(function() {
                // Enable autoplay after delay
                slider.attr('data-autoplay', 'true');
                et_pb_simple_slider(slider);

                setInterval(function() {
                    // Stop slider
                    slider.attr('data-autoplay', 'false');
                    slider.trigger('stop.et_pb_simple_slider');

                    setTimeout(function() {
                        // Restart slider
                        slider.attr('data-autoplay', 'true');
                        et_pb_simple_slider(slider);
                    }, intervalTime);

                }, delayTime + intervalTime);
            }, delayTime);
        });
    }

    // Run after window load to ensure Divi is fully initialized
    $(window).load(handleSlider);
});
